    <div class="col-md-4">
        <li>@ViewBag.PlayerInformation.name - @ViewBag.PlayerInformation.realm - @ViewBag.PlayerInformation.faction</li>
        <li>@ViewBag.PlayerInformation.className - @ViewBag.PlayerInformation.specName</li>
        <li>@ViewBag.PlayerInformation.race - @ViewBag.PlayerInformation.gender</li>
        <img src="@ViewBag.PlayerInformation.thumbnail" />
    </div>
    @foreach (string itemURL in Task<List<string>>.Factory.StartNew(() => wowAudit.ApiMethods.getPlayerInfo.getWowheadURL(ViewBag.PlayerInformation.items)).Result)
    {
        <li><a href="@itemURL"></a></li>

    }

    <li>ItemLVL: @ViewBag.PlayerInformation.items.averageItemLevelEquipped</li>
    <li>RaiderIO: @ViewBag.playerInformation.raiderIOScore</li>
@if (ViewBag.playerInformation.progress != null)
{
    @foreach (Progress progress in ViewBag.playerInformation.progress)
    {<ul>
            @progress.dungeon
            <li>Normal: @progress.normalProgress</li>
            <li>Heroic: @progress.heroicProgress</li>
            <li>Mythic: @progress.mythicProgress</li>

        </ul>
    }
}



